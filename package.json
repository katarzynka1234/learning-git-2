{
  "name": "nauka-gita-3",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:html",
    "test:html": "globstar nu-html-checker *.html",

    "init-project":"npm install && npm run init:dirs && npm run init:files && npm run init:gitignore",
    "init:dirs":"mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",

    "build": "npm run build:sass",
    "build:sass": "node-sass --output-style compact -o css scss",
    
    "watch": "npm run watch:browser-sync",
    "watch:browser-sync": "node_modules/.bin/browser-sync start --server --files 'css/*.css' '*.html''"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katarzynka1234/nauka-gita-4.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/katarzynka1234/nauka-gita-4/issues"
  },
  "homepage": "https://github.com/katarzynka1234/nauka-gita-4#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.23.6",
    "globstar": "^1.0.0",
    "nu-html-checker": "^0.1.0"
  },
  "dependencies": {
    "mkdirp": "^0.5.1",
    "node-sass": "^4.8.3"
  }
}
